            <Label Style="{StaticResource Header}" Grid.Column="2">9:55 - 11:25</Label>
            <Label Style="{StaticResource Header}" Grid.Column="3">11:35 - 13:05</Label>
            <Label Style="{StaticResource Header}" Grid.Column="4">13:45 - 15:15</Label>
            <Label Style="{StaticResource Header}" Grid.Column="5">15:25 - 16:55</Label>
